<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="299" Width="800">
    <Grid>
        <TextBox x:Name="Save" HorizontalAlignment="Left" Height="56" Margin="10,10,0,0" TextWrapping="Wrap" Text="Введите URL картинки" VerticalAlignment="Top" Width="300"/>
        <Button Content="Добавить картинку" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="300" Height="29" Click="Button_Click"/>
        <Button Content="Отправить на почту" HorizontalAlignment="Left" Margin="10,168,0,0" VerticalAlignment="Top" Width="300" Height="29" Click="Button_Click_2"/>
        <TextBox x:Name="category" HorizontalAlignment="Left" Height="58" Margin="10,71,0,0" TextWrapping="Wrap" Text="Введите Категорию Картинки" VerticalAlignment="Top" Width="300"/>
        <Image x:Name="Img" Width="Auto" Height="Auto" Source="" Margin="315,10,10.333,10.333" />
        <TextBox x:Name="Mail" HorizontalAlignment="Left" Height="58" Margin="10,202,0,0" TextWrapping="Wrap" Text="Введите почту" VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
